<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.CollaborationController"
            stylesheets="@light-theme.css">

    <children>

        <!-- Header -->
        <AnchorPane prefHeight="78.0" prefWidth="700.0" style="-fx-background-color: #dc0c0c; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0.3, 0, 2);">
            <children>
                <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="30.0" layoutY="14.0">
                    <image>
                        <Image url="@/icons/event.png"/>
                    </image>
                </ImageView>
                <Label layoutX="100.0" layoutY="24.0" text="Ajouter une Collaboration"
                       style="-fx-text-fill: white;">
                    <font>
                        <Font name="Arial Bold Italic" size="24.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>

        <!-- NOM -->
        <AnchorPane layoutX="100.0" layoutY="100.0" prefWidth="500.0" prefHeight="40.0">
            <ImageView fitHeight="20" fitWidth="20" layoutX="5" layoutY="10">
                <image>
                    <Image url="@/icons/user.png" />
                </image>
            </ImageView>
            <TextField fx:id="nomField" layoutX="35.0" layoutY="0.0" promptText="Entrer le nom"
                       AnchorPane.leftAnchor="35.0" AnchorPane.rightAnchor="0.0"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ccc;">
                <tooltip>
                    <Tooltip text="Nom du partenariat, ex: ENIT x ZenithGuard" />
                </tooltip>
            </TextField>
        </AnchorPane>

        <!-- TYPE -->
        <AnchorPane layoutX="100.0" layoutY="150.0" prefWidth="500.0" prefHeight="40.0">
            <ImageView fitHeight="20" fitWidth="20" layoutX="5" layoutY="10">
                <image>
                    <Image url="@/icons/type.png" />
                </image>
            </ImageView>
            <TextField fx:id="typeField" layoutX="35.0" layoutY="0.0" promptText="Entrer le type"
                       AnchorPane.leftAnchor="35.0" AnchorPane.rightAnchor="0.0"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ccc;">
                <tooltip>
                    <Tooltip text="Type de collaboration, ex: Support, Sponsoring" />
                </tooltip>
            </TextField>
        </AnchorPane>

        <!-- STATUS -->
        <AnchorPane layoutX="100.0" layoutY="200.0" prefWidth="500.0" prefHeight="40.0">
            <ImageView fitHeight="20" fitWidth="20" layoutX="5" layoutY="10">
                <image>
                    <Image url="@/icons/status.png" />
                </image>
            </ImageView>
            <TextField fx:id="statusField" layoutX="35.0" layoutY="0.0" promptText="active / expirer"
                       AnchorPane.leftAnchor="35.0" AnchorPane.rightAnchor="0.0"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ccc;">
                <tooltip>
                    <Tooltip text="Statut de la collaboration: active ou expirer" />
                </tooltip>
            </TextField>
        </AnchorPane>

        <!-- DATE EXPIRATION -->
        <AnchorPane layoutX="100.0" layoutY="250.0" prefWidth="500.0" prefHeight="40.0">
            <ImageView fitHeight="20" fitWidth="20" layoutX="5" layoutY="10">
                <image>
                    <Image url="@/icons/calendar.png" />
                </image>
            </ImageView>
            <TextField fx:id="dateExpField" layoutX="35.0" layoutY="0.0" promptText="yyyy-mm-dd"
                       AnchorPane.leftAnchor="35.0" AnchorPane.rightAnchor="0.0"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ccc;">
                <tooltip>
                    <Tooltip text="Date d'expiration au format yyyy-mm-dd" />
                </tooltip>
            </TextField>
        </AnchorPane>

        <!-- DATE SIGNATURE -->
        <AnchorPane layoutX="100.0" layoutY="300.0" prefWidth="500.0" prefHeight="40.0">
            <ImageView fitHeight="20" fitWidth="20" layoutX="5" layoutY="10">
                <image>
                    <Image url="@/icons/signature.png" />
                </image>
            </ImageView>
            <TextField fx:id="dateSigField" layoutX="35.0" layoutY="0.0" promptText="yyyy-mm-dd"
                       AnchorPane.leftAnchor="35.0" AnchorPane.rightAnchor="0.0"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ccc;">
                <tooltip>
                    <Tooltip text="Date de signature au format yyyy-mm-dd" />
                </tooltip>
            </TextField>
        </AnchorPane>

        <!-- BOUTON -->
        <Button fx:id="ajouterBtn" layoutX="270.0" layoutY="370.0" prefHeight="40.0" prefWidth="160.0"
                text="Ajouter" onAction="#ajouterCollaboration"
                style="-fx-background-color: #FF4040; -fx-background-radius: 20; -fx-text-fill: white; -fx-font-size: 14;" />

    </children>
</AnchorPane>
