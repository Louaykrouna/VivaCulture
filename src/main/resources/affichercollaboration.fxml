<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.AfficherCollaborationController"
            prefHeight="700.0" prefWidth="1000.0"
            style="-fx-background-color: #f5f7fa;">

   <children>
      <VBox spacing="30" alignment="TOP_CENTER"
            AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
            AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
            style="-fx-padding: 40;">

         <!-- Titre -->
         <VBox alignment="CENTER" spacing="10">
            <Label text="Liste des Collaborations"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
               <font>
                  <Font name="Segoe UI" size="32"/>
               </font>
               <effect>
                  <DropShadow color="rgba(0,0,0,0.15)" radius="5" spread="0.2"/>
               </effect>
            </Label>
            <Separator prefWidth="300" style="-fx-background-color: #bdc3c7;"/>
         </VBox>

         <!-- Liste -->
         <StackPane style="-fx-background-color: transparent;">
            <ListView fx:id="lvCollaboration"
                      style="-fx-background-color: white;
                                 -fx-background-radius: 12;
                                 -fx-border-radius: 12;
                                 -fx-border-color: #e0e0e0;
                                 -fx-border-width: 1;
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 15, 0, 0, 0);"
                      prefHeight="450" prefWidth="800">
               <padding>
                  <Insets top="10" right="10" bottom="10" left="10"/>
               </padding>
            </ListView>
         </StackPane>

         <!-- Boutons -->
         <HBox alignment="CENTER" spacing="20">
            <Button text="Ajouter une Collaboration" onAction="#ajouterCollaboration"
                    style="-fx-background-color: #27ae60;
                               -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-font-size: 14px; -fx-padding: 12 30;
                               -fx-background-radius: 12; -fx-cursor: hand;">
               <font>
                  <Font name="Segoe UI Semibold" size="14"/>
               </font>
            </Button>

            <Button text="Retour" onAction="#retour"
                    style="-fx-background-color: #7f8c8d;
                               -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-font-size: 14px; -fx-padding: 12 30;
                               -fx-background-radius: 12; -fx-cursor: hand;">
               <font>
                  <Font name="Segoe UI Semibold" size="14"/>
               </font>
            </Button>
         </HBox>
      </VBox>
   </children>
</AnchorPane>
