<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.AfficherPartenaireController"
            prefHeight="700.0" prefWidth="1000.0"
            style="-fx-background-color: #f5f7fa;">

    <children>
        <VBox spacing="25" alignment="TOP_CENTER"
              AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <!-- Title -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="Liste des Partenaires"
                       style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                    <font>
                        <Font name="Segoe UI" size="32"/>
                    </font>
                    <effect>
                        <DropShadow color="rgba(0,0,0,0.1)" radius="5" spread="0.2"/>
                    </effect>
                </Label>
                <Separator prefWidth="300" style="-fx-background-color: #bdc3c7; -fx-padding: 1;"/>
            </VBox>



            <!-- ListView -->
            <StackPane style="-fx-background-color: transparent; -fx-padding: 0 20;">
                <ListView fx:id="lvPartenaire"
                          style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-radius: 12;
                             -fx-border-color: #e0e0e0; -fx-border-width: 1;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 15, 0, 0, 0);">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </ListView>
            </StackPane>

            <!-- Footer button -->
            <HBox alignment="CENTER" spacing="20">
                <Button text="Ajouter Partenaire" onAction="#ajouterPartenaire"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
