<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefWidth="900" prefHeight="600"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.AfficherCategoriesController"
            style="-fx-background-color: white;">

    <children>
        <!-- Conteneur principal orange -->
        <VBox layoutX="30" layoutY="30"
              prefWidth="860" prefHeight="540"
              spacing="15"
              style="
                 -fx-background-color: white;
                 -fx-padding: 20;
                 -fx-border-color: orange;
                 -fx-border-width: 2;
                 -fx-border-radius: 8;
                 -fx-background-radius: 8;">
            <children>
                <!-- Titre -->
                <Label text="📋 Liste des catégories"
                       style="-fx-font-size:22px; -fx-font-weight:bold; -fx-text-fill:orange;"/>

                <!-- Barre filtre + tri -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="🔍 Filtrer :"/>
                    <TextField fx:id="tfFilter" promptText="Rechercher…"/>
                    <Label text="⇅ Trier :"/>
                    <ComboBox fx:id="cbSort" prefWidth="160"/>
                </HBox>

                <!-- Liste défilante -->
                <ScrollPane fitToWidth="true"
                            VBox.vgrow="ALWAYS"
                            style="-fx-background-color: transparent;">
                    <content>
                        <VBox fx:id="vboxCategories"
                              spacing="12"
                              style="
                                -fx-background-color: #fffbea;
                                -fx-padding: 16;
                                -fx-background-radius: 6;
                                -fx-border-radius: 6;" />
                    </content>
                </ScrollPane>

                <!-- Barre de boutons alignés à droite -->
                <HBox spacing="20" alignment="CENTER_RIGHT">
                    <Button text="Statistiques"
                            onAction="#showStatsChart"
                            style="-fx-background-color:#2196F3; -fx-text-fill:white; -fx-font-weight:bold;"/>
                    <Button text="📄 Types d'événements"
                            onAction="#allerVersTypesEvenement"
                            style="-fx-background-color:#FFB84D; -fx-text-fill:white; -fx-font-weight:bold;"/>
                    <Button text="➕ Ajouter une catégorie"
                            onAction="#ajouterCategorie"
                            style="-fx-background-color:orange; -fx-text-fill:white; -fx-font-weight:bold;"/>
                    <Button text="Traduire" fx:id="btnTranslate"
                            onAction="#toggleTranslation"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight:bold;"/>
                </HBox>


            </children>
        </VBox>
    </children>
</AnchorPane>
