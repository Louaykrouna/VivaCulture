<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.AjouterCategorieController"
            style="-fx-background-color: white;">

   <children>
      <VBox layoutX="20.0" layoutY="20.0" spacing="15.0"
            style="
                  -fx-background-color: white;
                  -fx-padding: 20;
                  -fx-border-color: orange;
                  -fx-border-width: 1.5;
                  -fx-border-radius: 6;
                  -fx-background-radius: 6;">

         <Label text="➕ Ajouter une Catégorie"
                style="
                       -fx-font-size: 18px;
                       -fx-font-weight: bold;
                       -fx-text-fill: orange;"/>

         <VBox spacing="10.0"
               style="
                      -fx-background-color: #fffbea;
                      -fx-padding: 12;
                      -fx-background-radius: 4;
                      -fx-border-radius: 4;">

            <HBox spacing="10.0" alignment="CENTER_LEFT">
               <Label text="Nom" style="-fx-text-fill: orange; -fx-font-weight: bold;"/>
               <TextField fx:id="txtFNom" prefWidth="300.0"/>
            </HBox>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
               <Label text="Description" style="-fx-text-fill: orange; -fx-font-weight: bold;"/>
               <TextField fx:id="txtFDescription" prefWidth="300.0"/>
            </HBox>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
               <Label text="Statut" style="-fx-text-fill: orange; -fx-font-weight: bold;"/>
               <TextField fx:id="txtFStatut" prefWidth="300.0"/>
            </HBox>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
               <Label text="URL Image" style="-fx-text-fill: orange; -fx-font-weight: bold;"/>
               <TextField fx:id="txtFurl_image" prefWidth="300.0"/>
            </HBox>
         </VBox>

         <HBox spacing="15.0" alignment="CENTER_RIGHT">
            <Button text="Retour à la liste"
                    onAction="#retourListe"
                    style="
                            -fx-background-color: #ffeb3b;
                            -fx-text-fill: white;
                            -fx-font-weight: bold;
                            -fx-pref-width: 140px;
                            -fx-pref-height: 38px;
                            -fx-background-radius: 4;"/>

            <Button text="Ajouter"
                    onAction="#ajouterCategorie"
                    style="
                            -fx-background-color: orange;
                            -fx-text-fill: white;
                            -fx-font-weight: bold;
                            -fx-pref-width: 100px;
                            -fx-pref-height: 38px;
                            -fx-background-radius: 4;"/>
         </HBox>
      </VBox>
   </children>
</AnchorPane>
