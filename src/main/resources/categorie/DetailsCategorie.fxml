<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="15.0" alignment="CENTER"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.DetailsCategorieController"
      style="
          -fx-background-color: white;
          -fx-padding: 20;
          -fx-border-color: orange;
          -fx-border-width: 1.5;
          -fx-border-radius: 6;
          -fx-background-radius: 6;">

    <Label text="Détails de la catégorie"
           style="
               -fx-font-size: 18px;
               -fx-font-weight: bold;
               -fx-text-fill: orange;"/>

    <Label fx:id="lblNom" style="-fx-font-size: 14px;"/>
    <Label fx:id="lblDescription" style="-fx-font-size: 14px;"/>
    <Label fx:id="lblStatut" style="-fx-font-size: 14px;"/>
    <Label fx:id="lblImage" style="-fx-font-size: 14px;"/>

    <HBox spacing="15.0" alignment="CENTER">
        <Button text="Retour à la liste"
                onAction="#retourListe"
                style="
                    -fx-background-color: #ffeb3b;
                    -fx-text-fill: white;
                    -fx-font-weight: bold;
                    -fx-pref-width: 140px;
                    -fx-pref-height: 38px;
                    -fx-background-radius: 4;"/>

        <Button text="Modifier"
                onAction="#modifierCategorie"
                style="
                    -fx-background-color: orange;
                    -fx-text-fill: white;
                    -fx-font-weight: bold;
                    -fx-pref-width: 100px;
                    -fx-pref-height: 38px;
                    -fx-background-radius: 4;"/>
    </HBox>
</VBox>
