<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefWidth="1200" prefHeight="700"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.AfficherEvenementController"
            style="-fx-background-color:white;">

    <children>
        <!-- Cadre principal avec bordure orange -->
        <VBox layoutX="15" layoutY="15"
              prefWidth="1170" prefHeight="650"
              spacing="20"
              style="
                 -fx-background-color: white;
                 -fx-padding: 25;
                 -fx-border-color: orange;
                 -fx-border-width: 3;
                 -fx-border-radius: 10;
                 -fx-background-radius: 10;">
            <children>
                <!-- Titre -->
                <Label text="📋 Liste des évènements"
                       style="-fx-font-size:24px; -fx-font-weight:bold; -fx-text-fill:orange;"/>

                <!-- Zone de défilement -->
                <ScrollPane fitToWidth="true"
                            VBox.vgrow="ALWAYS"
                            style="-fx-background-color: transparent;">
                    <content>
                        <VBox fx:id="vboxEvenements"
                              spacing="15"
                              style="
                                -fx-background-color: #fffbea;
                                -fx-padding: 15;
                                -fx-border-color: #FFE082;
                                -fx-border-width: 1.5;
                                -fx-border-radius: 6;
                                -fx-background-radius: 6;" />
                    </content>
                </ScrollPane>

                <!-- Barre de boutons alignés à droite -->
                <HBox spacing="20" alignment="CENTER_RIGHT">
                    <Button text="↩️ Retour"
                            onAction="#handleRetour"
                            style="
                               -fx-background-color:#FFD54F;
                               -fx-text-fill:white;
                               -fx-font-weight:bold;
                               -fx-pref-width:160px;
                               -fx-pref-height:36px;
                               -fx-background-radius:6;"/>
                    <Button text="➕ Ajouter un événement"
                            onAction="#handleAjouterEvenement"
                            style="
                               -fx-background-color:orange;
                               -fx-text-fill:white;
                               -fx-font-weight:bold;
                               -fx-pref-width:200px;
                               -fx-pref-height:36px;
                               -fx-background-radius:6;"/>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
