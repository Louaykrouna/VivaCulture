<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.DetailsEvenementController"
            style="-fx-background-color: white;">
    <children>
        <VBox spacing="15" alignment="TOP_LEFT" AnchorPane.topAnchor="10"
              AnchorPane.leftAnchor="10" style="-fx-padding: 20;">

            <!-- Ici on met bien les fx:id déclarés dans le controller -->
            <Label fx:id="lblTitre" text="Titre:" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
            <Label fx:id="lblDescription" text="Description:" wrapText="true"/>
            <Label fx:id="lblLieu" text="Lieu:"/>
            <Label fx:id="lblDateDebut" text="Date début:"/>
            <Label fx:id="lblDateFin" text="Date fin:"/>
            <Label fx:id="lblStatut" text="Statut:"/>
            <Label fx:id="lblUrlImage" text="URL Image:"/>
            <Label fx:id="lblMail" text="E-mail:"/>
            <Label fx:id="lblLongitude" text="Longitude:"/>
            <Label fx:id="lblLatitude" text="Latitude:"/>
            <Label fx:id="lblTypeEvenement" text="TypeEvenement:"/>

            <Button fx:id="btnMap" text="Voir la carte" onAction="#handleMap"/>
            <Button text="↩️ Retour" onAction="#handleRetour"/>
        </VBox>
    </children>
</AnchorPane>
