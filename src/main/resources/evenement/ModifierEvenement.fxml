<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.ModifierEvenementController">
    <children>
        <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <Label text="Modifier l'événement" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <HBox spacing="10">
                <Label text="Titre :" minWidth="150"/>
                <TextField fx:id="tfTitre" promptText="Titre de l'événement" />
            </HBox>

            <HBox spacing="10">
                <Label text="Type d'événement :" minWidth="150"/>
                <ComboBox fx:id="cbTypeEvenement" promptText="Sélectionner un type" />
            </HBox>

            <HBox spacing="10">
                <Label text="Description :" minWidth="150"/>
                <TextField fx:id="tfDescription" promptText="Description" />
            </HBox>

            <HBox spacing="10">
                <Label text="Lieu :" minWidth="150"/>
                <TextField fx:id="tfLieu" promptText="Lieu" />
            </HBox>

            <HBox spacing="10">
                <Label text="Nombre de places :" minWidth="150"/>
                <TextField fx:id="tfNombrePlaces" promptText="Nombre de places" />
            </HBox>

            <HBox spacing="10">
                <Label text="Date de début :" minWidth="150"/>
                <DatePicker fx:id="dpDateDebut" />
            </HBox>

            <HBox spacing="10">
                <Label text="Date de fin :" minWidth="150"/>
                <DatePicker fx:id="dpDateFin" />
            </HBox>

            <HBox spacing="10">
                <Label text="Statut :" minWidth="150"/>
                <TextField fx:id="tfStatut" promptText="Statut" />
            </HBox>

            <HBox spacing="10">
                <Label text="URL de l'image :" minWidth="150"/>
                <TextField fx:id="tfUrlImage" promptText="Image URL" />
            </HBox>

            <HBox spacing="10">
                <Label text="E-mail :" minWidth="150"/>
                <TextField fx:id="tfMail" promptText="Email" />
            </HBox>

            <HBox spacing="20" alignment="CENTER">
                <Button text="Modifier" onAction="#modifierEvenement"/>
                <Button text="Annuler" onAction="#annulerModification"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
