<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controllers.HomeController"
      alignment="CENTER"
      spacing="20"
      prefWidth="800"
      prefHeight="600"
      stylesheets="@styles.css">

    <!-- Title -->
    <Label text="Welcome to VivaCulture!" styleClass="app-title" />

    <!-- Profile Icon -->
    <HBox alignment="TOP_RIGHT" spacing="10">
        <ImageView fx:id="profileIcon" fitWidth="40" fitHeight="40" onMouseClicked="#navigateToProfile" style="-fx-cursor: hand;">
            <Image url="@profile-icon.png" />
        </ImageView>
    </HBox>

    <!-- Content Area -->
    <Label text="This is the Home Page." styleClass="content-text" />

    <!-- Dashboard Button -->
    <Button fx:id="dashboardButton" text="Go to Dashboard" onAction="#navigateToDashboard" managed="false" visible="false" style="-fx-cursor: hand; -fx-background-color: #4CAF50; -fx-text-fill: white;" />

    <!-- Logout Button -->
    <HBox alignment="CENTER" spacing="10">
        <Button text="Logout" onAction="#logout" styleClass="sign-in-button" />
    </HBox>
</VBox>