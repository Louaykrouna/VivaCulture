<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.modifierticketcontroller"
            prefHeight="500.0" prefWidth="700.0"
            style="-fx-background-color: white;">

    <children>
        <VBox alignment="CENTER" spacing="10"
              layoutX="100.0" layoutY="50.0"
              prefWidth="500.0" prefHeight="350.0"
              style="
                  -fx-background-color: white;
                  -fx-padding: 20;
                  -fx-border-color: orange;
                  -fx-border-width: 1.5;
                  -fx-border-radius: 6;
                  -fx-background-radius: 6;
              ">
            <Label text="Modifier un Ticket"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: orange;"/>

            <Label text="Nom:" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtNom" promptText="Nom" style="-fx-background-color: #fffbea;"/>

            <Label text="Prénom:" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtPrenom" promptText="Prénom" style="-fx-background-color: #fffbea;"/>

            <Label text="Numéro de téléphone:" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtNumeroTelephone" promptText="Numéro de téléphone" style="-fx-background-color: #fffbea;"/>

            <Label text="Date:" style="-fx-font-weight: bold;"/>
            <DatePicker fx:id="datePicker" style="-fx-background-color: #fffbea;"/>

            <Label text="Email:" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtEmail" promptText="Email" style="-fx-background-color: #fffbea;"/>

            <Label text="Prix:" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtPrix" promptText="Prix" style="-fx-background-color: #fffbea;"/>

            <Label text="ID Réservation:" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtReservationId" promptText="ID Réservation" style="-fx-background-color: #fffbea;"/>

            <Button text="Enregistrer" onAction="#handleEnregistrer"
                    style="-fx-background-color: orange; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-pref-width: 200; -fx-pref-height: 35;"/>

            <Button text="Annuler" onAction="#handleAnnuler"
                    style="-fx-background-color: #ffeb3b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-pref-width: 200; -fx-pref-height: 35;"/>
        </VBox>
    </children>
</AnchorPane>
