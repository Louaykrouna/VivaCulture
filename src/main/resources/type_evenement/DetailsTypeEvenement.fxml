<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="500.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.DetailsTypeEvenementController"
            style="-fx-background-color: white;">

    <VBox layoutX="20" layoutY="20" spacing="15"
          style="
            -fx-background-color: white;
            -fx-border-color: #FFA726;
            -fx-border-width: 1.5;
            -fx-border-radius: 6;
            -fx-background-radius: 6;
            -fx-padding: 20;">

        <Label text="📄 Détails du Type d'Événement"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #FFA726;"/>

        <Label fx:id="labelNom" style="-fx-font-size: 14px;"/>
        <Label fx:id="labelDescription" style="-fx-font-size: 14px;"/>
        <Label fx:id="labelImage" style="-fx-font-size: 14px;"/>
        <Label fx:id="labelCategorie" style="-fx-font-size: 14px;"/>

        <HBox spacing="15" alignment="CENTER_LEFT">
            <Button fx:id="btnRetour" text="↩️ Retour" onAction="#handleRetour"
                    style="
                      -fx-background-color: #FFD54F;
                      -fx-text-fill: white;
                      -fx-font-weight: bold;
                      -fx-pref-width: 100px;
                      -fx-pref-height: 36px;
                      -fx-background-radius: 4;"/>
            <Button fx:id="btnModifier" text="✏️ Modifier" onAction="#modifierTypeEvenement"
                    style="
                      -fx-background-color: #FFB84D;
                      -fx-text-fill: white;
                      -fx-font-weight: bold;
                      -fx-pref-width: 100px;
                      -fx-pref-height: 36px;
                      -fx-background-radius: 4;"/>
        </HBox>
    </VBox>
</AnchorPane>
