<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.ModifierTypeEvenementController"
      spacing="20" alignment="CENTER"
      style="-fx-background-color: white; -fx-padding: 20;">

    <VBox spacing="15"
          style="
            -fx-background-color: white;
            -fx-border-color: #FFA726;
            -fx-border-width: 1.5;
            -fx-border-radius: 6;
            -fx-background-radius: 6;
            -fx-padding: 20;">

        <Label text="✏️ Modifier le Type d'Événement"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #FFA726;"/>

        <VBox spacing="12"
              style="
                -fx-background-color: #fffbea;
                -fx-padding: 12;
                -fx-background-radius: 4;
                -fx-border-radius: 4;">

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Catégorie :" style="-fx-text-fill: #FFA726; -fx-font-weight: bold;"/>
                <ComboBox fx:id="comboBoxCategorie" promptText="Choisir la catégorie"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Nom :" style="-fx-text-fill: #FFA726; -fx-font-weight: bold;"/>
                <TextField fx:id="txtNom" promptText="Nom du type d'événement"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="URL Image :" style="-fx-text-fill: #FFA726; -fx-font-weight: bold;"/>
                <TextField fx:id="txtUrlImage" prefWidth="250"/>
                <!-- bouton Parcourir ajouté -->
                <Button fx:id="btnBrowseImage"
                        text="Parcourir…"
                        style="
              -fx-background-color: #FFD54F;
              -fx-text-fill: white;
              -fx-font-weight: bold;
              -fx-pref-height: 30px;
              -fx-background-radius: 4;"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Description :" style="-fx-text-fill: #FFA726; -fx-font-weight: bold;"/>
                <TextField fx:id="txtDescription" promptText="Description"/>
            </HBox>
        </VBox>

        <HBox spacing="15" alignment="CENTER_RIGHT">
            <Button fx:id="btnModifier" text="✏️ Modifier" onAction="#handleModifier"
                    style="
                      -fx-background-color: #FFB84D;
                      -fx-text-fill: white;
                      -fx-font-weight: bold;
                      -fx-pref-width: 100px;
                      -fx-pref-height: 36px;
                      -fx-background-radius: 4;"/>
            <Button fx:id="btnRetour" text="↩️ Retour" onAction="#handleRetour"
                    style="
                      -fx-background-color: #FFD54F;
                      -fx-text-fill: white;
                      -fx-font-weight: bold;
                      -fx-pref-width: 100px;
                      -fx-pref-height: 36px;
                      -fx-background-radius: 4;"/>
        </HBox>
    </VBox>
</VBox>
